set smooth-scroll true

# copy selection to system clipboard
set selection-clipboard clipboard

# enable incremental search
set incremental-search true

# zoom
map <C-=> zoom in
map <C--> zoom out

# gui (c)ommand line (s) status bar (v)ertical scroll 
set guioptions "v"

# font
set font "Fira Code 10"

# colors
set default-bg "#2f343f"

set highlight-transparency 0.05

set recolor-darkcolor "#f8f8f2"
set recolor-lightcolor "#2f343f"

set recolor true