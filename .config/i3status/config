general {
        colors = true
        interval = 1
}

order += "load"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
	status_chr = ""
	status_bat = ""
	status_full = ""
	format = "%status %percentage"
	integer_battery_capacity = true
	last_full_capacity = true
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

load {
        format = " %1min"
}

disk "/" {
        format = "%avail"
}
